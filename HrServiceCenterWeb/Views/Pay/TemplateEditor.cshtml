
@{
    ViewBag.Title = "公司档案信息";
}
<!-- import opt js-->
<script src="~/JS/pay.TemplateEditOpt.js"></script>
<div class="container container-layout">
    <div class="page-header">
        <h3>发放管理.<small>&nbsp;<a href="~/Pay/TemplateList">模板列表</a></small>.<small>&nbsp;模板编辑</small></h3>
    </div>

    <!-- 模板基本信息 -->
    <div style="margin:20px 0;"></div>
    <div>
        <input id="hideview" type="hidden" value="@ViewBag.TemplateId" />
        <form class="form-horizontal" id="formTemplate">
            <div class="form-group" id="form-cmp">
                <label class="col-sm-2 control-label">公司名称</label>
                <div class="col-sm-10">
                    <input id="cmpname" class="easyui-combobox" form-field-name="CompanyName" form-control-type="textbox" data-options="valueField: 'CompanyId',textField: 'Name',required:true,editable:false" style="height:30px;width:20%" />
                </div>
                <hr />
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <ul id="tree"></ul>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <button class="btn btn-default" onclick="opt.save();return false;" style="height:30px;width:100%;margin-top:20px; text-align:center;">保存</button>
            </div>
        </form>
    </div>
</div>


