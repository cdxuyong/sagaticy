@model HrServiceCenterWeb.Models.LoginModel
@{
    ViewBag.Title = "用户密码设置";
}

<div class="container container-layout">
    <div class="page-header">
        <h3>用户信息.<small>&nbsp;密码设置</small></h3>
    </div>
    <!-- 数据列表 -->
    <div id="dgContainer" style="margin:20px 0;">
        <form class="form-horizontal" action="@Url.Action("UserPage", "Account")" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label">账号</label>
                <div class="col-sm-4">
                    <input class="easyui-textbox" name="UserName" value="@Model.UserName" style="height:30px;width:100%" readonly="readonly"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">密码</label>
                <div class="col-sm-4">
                    <input class="easyui-textbox" type="password" name="Password" value="******" style="height:30px;width:100%" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-4">
                    <button class="btn btn-primary" style="width:110px;">保存设置</button>
                    <button class="btn btn-success" onclick="self.history.back(); return false;" style="width:110px;">退出设置</button>
                </div>
            </div>
        </form>
    </div>
</div>


