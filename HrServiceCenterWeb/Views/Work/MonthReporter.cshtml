
@{
    ViewBag.Title = "考勤管理";
}
<!-- import opt js-->
<script src="~/JS/check.MonthListOpt.js"></script>
<link href="~/Library/uploadFiles/default.css" rel="stylesheet" />
<script src="~/Library/uploadFiles/jquery.uploadFiles.js"></script>
<div class="container container-layout">
    <div class="page-header">
        <h3>考勤管理.<small>&nbsp;考勤月报</small></h3>
    </div>
    <div id="pnlSearch">
        <div class="row">
            <div class="col-md-2">
                <input type="text" id="txtQuery" style="width:180px;" class="form-control panelseach-text" placeholder="请输入关键字...">
            </div>
            <div class="col-md-1">
                <a class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="opt.query()"><i class="fa fa-search"></i> 快速查询</a>
            </div>
            <div class="col-md-5">
                <a class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="opt.import();"><i class="fa fa-file-o" aria-hidden="true"></i> 导入考勤</a>
                <a class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="opt.querydetail()"><i class="fa fa-file-o" aria-hidden="true"></i> 查看明细</a>
                <a class="btn btn-danger btn-sm" href="javascript:void(0)" onclick="opt.delete()" style="width:80px;"><i class="fa fa-trash-o" aria-hidden="true"></i> 删除</a>
            </div>
        </div>

    </div>
    <!-- 数据列表 -->
    <div id="dgContainer" style="margin:20px 0;">
        <table id="dg" class="easyui-datagrid" title="" style="width:100%;height:100%"
               data-options="idField:'a',
			        singleSelect:true,collapsible:false,rownumbers:true,striped:true,loadFilter:pagerFilter,
			        autoRowHeight:true,onDblClickRow:function(rowIndex,rowData){opt.querydetail()},
			        pagination:true,
			        pageSize:10,pageList:[10,20,30,40,50,100]">
            <thead>
                <tr>
                    <th data-options="field:'CmpName',width:300">单位名称</th>
                    <th data-options="field:'CheckMonth',width:120">考勤月份</th>
                    <th data-options="field:'CheckDays',width:120">考勤天数</th>
                    <th data-options="field:'LateDays',width:120">迟到人次</th>
                    <th data-options="field:'LostDays',width:120">迟到人次</th>
                </tr>
            </thead>
        </table>
    </div>
    <!--模态框-->

    <div id="inputwindow" class="easyui-window" title="缴存数据导出" data-options="modal:true,closed:true" style="width:400px;height:150px;">
        <div style="margin:0 auto;text-align:center;line-height:100px;">
            <form id="inputform" method="post" enctype="multipart/form-data">
                <input id="datebox" editable="false" class="easyui-datebox" value="2020-01" form-field-name="PayMonth" form-control-type="datebox" style="height:30px;width:150px" />
                <input type="submit" class="btn btn-success" onclick="opt.exportByTime(); return false;" title="导出本月数据" value="导出本月数据" style="margin-left:10px;" />
            </form>
        </div>
    </div>

    <div id="winUpload"></div>
</div>



